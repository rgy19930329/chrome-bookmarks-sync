{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "chorme-bookmarks-sync",
  // 插件的版本
  "version": "1.0.0",
  // 插件描述
  "description": "同步chrome书签",
  // 图标，一般偷懒全部用一个尺寸的也没问题
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  // 权限申请
  "permissions": ["bookmarks"],
  "browser_action": {
    "default_icon": "img/logo.png",
    // 图标悬停时的标题，可选
    "default_title": "同步chrome书签",
    "default_popup": "popup.html"
  }
}
